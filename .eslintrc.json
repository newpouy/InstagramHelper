{
  "root": true,
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "script"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": false,
    "mocha": false
  },
  "rules": {
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "always-multiline"
      }
    ],
    "yoda": 0,
    "no-multiple-empty-lines": [
      1,
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "no-console": 1,
    "no-useless-escape": 1,
    "camelcase": 0,
    "max-len": [1, 120]
  }
}
